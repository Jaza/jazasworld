---js
{
  layout: "layouts/base.njk",
  pagination: {
    data: (data) => {
      return "collections.reviewtag/" + data.page.fileSlug;
    },
    size: 10,
    reverse: true,
    alias: "reviewItems",
    pageOnEmptyData: true
  }
}
---
<div class="content">

{{ content | safe }}

{%- if reviewItems.length %}

{% include "components/review_listing.njk" %}

{% include "components/pagination.njk" %}
{%- else %}

<p><em>No books found.</em></p>

{%- endif %}

{%- set prevReviewTag = collections.reviewtag | getPreviousCollectionItem(page) %}
{%- set nextReviewTag = collections.reviewtag | getNextCollectionItem(page) %}

{%- if prevReviewTag or nextReviewTag %}
{% include "components/reviewtag_prev_next.njk" %}
{%- endif %}

</div><!-- /.content -->
